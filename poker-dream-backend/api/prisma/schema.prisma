generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==========================================
// AUTH & USERS
// ==========================================

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  name          String?
  role          UserRole  @default(USER)
  isActive      Boolean   @default(true)
  emailVerified Boolean   @default(false)

  // Relations
  preferences   UserPreference?
  alerts        Alert[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  EDITOR
  USER
}

model UserPreference {
  id                    String   @id @default(uuid())
  userId                String   @unique
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  language              String   @default("en")
  notificationsEnabled  Boolean  @default(true)
  darkModeEnabled       Boolean  @default(true)
  favoriteTournaments   String[]
  favoritePlayers       String[]

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@map("user_preferences")
}

// ==========================================
// TOURNAMENTS
// ==========================================

model Tournament {
  id              String            @id @default(uuid())
  name            String
  description     String?           @db.Text
  startDate       DateTime?
  endDate         DateTime?
  location        String?
  venue           String?
  status          TournamentStatus  @default(UPCOMING)
  prizePool       Decimal?          @db.Decimal(15, 2)
  buyIn           Decimal?          @db.Decimal(10, 2)
  totalEntries    Int               @default(0)
  bannerImageUrl  String?

  // Relations
  standings       Standing[]
  structure       TournamentStructure[]
  videoHighlights VideoHighlight[]

  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([status])
  @@index([startDate, endDate])
  @@map("tournaments")
}

enum TournamentStatus {
  UPCOMING
  LIVE
  COMPLETED
  CANCELLED
}

model TournamentStructure {
  id              String     @id @default(uuid())
  tournamentId    String
  tournament      Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  level           Int
  smallBlind      Int?
  bigBlind        Int?
  ante            Int        @default(0)
  durationMinutes Int        @default(60)
  isBreak         Boolean    @default(false)

  createdAt       DateTime   @default(now())

  @@map("tournament_structures")
}

// ==========================================
// PLAYERS
// ==========================================

model Player {
  id              String     @id @default(uuid())
  name            String
  country         String?
  countryCode     String?
  flagUrl         String?
  profileImageUrl String?
  bio             String?    @db.Text

  // Relations
  standings       Standing[]

  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  @@map("players")
}

// ==========================================
// STANDINGS
// ==========================================

model Standing {
  id            String     @id @default(uuid())
  tournamentId  String
  tournament    Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  playerId      String
  player        Player     @relation(fields: [playerId], references: [id], onDelete: Cascade)

  rank          Int
  chips         BigInt
  isSurvivor    Boolean    @default(false)
  prizeAmount   Decimal?   @db.Decimal(12, 2)

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@unique([tournamentId, playerId])
  @@index([tournamentId])
  @@index([rank])
  @@map("standings")
}

// ==========================================
// NEWS
// ==========================================

model NewsArticle {
  id          String         @id @default(uuid())
  title       String
  summary     String?        @db.Text
  content     String         @db.Text
  imageUrl    String?
  category    NewsCategory   @default(GENERAL)
  author      String?
  isPublished Boolean        @default(false)
  publishedAt DateTime?

  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([category])
  @@index([publishedAt])
  @@map("news_articles")
}

enum NewsCategory {
  TOURNAMENTS
  INDUSTRY
  STRATEGY
  PLAYER_INTERVIEW
  GENERAL
}

// ==========================================
// VIDEO HIGHLIGHTS
// ==========================================

model VideoHighlight {
  id              String     @id @default(uuid())
  title           String
  description     String?    @db.Text
  videoUrl        String
  thumbnailUrl    String?
  durationSeconds Int?
  tournamentId    String?
  tournament      Tournament? @relation(fields: [tournamentId], references: [id], onDelete: SetNull)
  viewCount       Int        @default(0)

  publishedAt     DateTime   @default(now())
  createdAt       DateTime   @default(now())

  @@map("video_highlights")
}

// ==========================================
// ALERTS
// ==========================================

model Alert {
  id          String     @id @default(uuid())
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  title       String
  message     String?    @db.Text
  type        AlertType  @default(SYSTEM)
  relatedId   String?
  isRead      Boolean    @default(false)

  createdAt   DateTime   @default(now())

  @@index([userId])
  @@index([isRead])
  @@map("alerts")
}

enum AlertType {
  TOURNAMENT
  PLAYER
  NEWS
  SYSTEM
  PROMOTION
}

// ==========================================
// SPONSORS
// ==========================================

model Sponsor {
  id           String   @id @default(uuid())
  name         String
  logoUrl      String
  websiteUrl   String?
  displayOrder Int      @default(0)
  isActive     Boolean  @default(true)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("sponsors")
}
